<?php

class Schedule {
        var $games;
        var $team_id;
        
        function Schedule($team_index) {
           $this->games = Array();
           $this->team_id = $team_index;
        }
        
        function getGamesCount() {
           return count($this->games);
        }
        
        function addGame($game) {
           array_push($this->games,$game);
        }
        
        function getWins() {
           $wins = 0;
           
           for ($i=0; $i < count($this->games); $i++) {
              if ($this->games[$i]->isMyGame($this->team_id)) {
                 if ($this->games[$i]->isWin($this->team_id)) { $wins += 1; }
              }
           }
           
           return $wins;
        }          
        
        function getLosses() {
           $losses = 0;
           
           for ($i=0; $i < count($this->games); $i++) {
              if ($this->games[$i]->isMyGame($this->team_id)) {
                 if ($this->games[$i]->isLoss($this->team_id)) { $losses += 1; }
              }
           }
           
           return $losses;
        }          

        function getRecord() {
           $record[0] = 0;
           $record[1] = 0;
           $record[2] = 0;
           
           for ($i=0; $i < count($this->games); $i++) {
              if ($this->games[$i]->isMyGame($this->team_id)) {
                 if ($this->games[$i]->isWin($this->team_id)) { $record[0] += 1; }
                 else if ($this->games[$i]->isLoss($this->team_id)) { $record[1] += 1; }
                 else { $record[2] += 1;}
              }
           }
           
           return $record;
        }
        
        function getRecordAS() {
           $record[0] = 0;
           $record[1] = 0;
           $record[2] = 0;
                   
           for ($i=0; $i < count($this->games); $i++) {
              if ($this->games[$i]->isMyGame($this->team_id)) {
                 if ($this->games[$i]->isWinAS($this->team_id)) { $record[0] += 1; }
                 else if ($this->games[$i]->isLossAS($this->team_id)) { $record[1] += 1; }
                 else { $record[2] += 1;}
              }
           }
           
           return $record;
        }
        
        function getHomeRecord() {
           $record[0] = 0;
           $record[1] = 0;
           $record[2] = 0;
           
           for ($i=0; $i < count($this->games); $i++) {
              if ($this->games[$i]->isHomeGame($this->team_id)) {
                 if ($this->games[$i]->isHomeWin($this->team_id)) { $record[0] += 1; }
                 else if ($this->games[$i]->isHomeLoss($this->team_id)) { $record[1] += 1; }
                 else { $record[2] += 1;}
              }
           }
           
           return $record;
        }
        
        function getAwayRecord() {
           $record[0] = 0;
           $record[1] = 0;
           $record[2] = 0;
           
           for ($i=0; $i < count($this->games); $i++) {
              if ($this->games[$i]->isAwayGame($this->team_id)) {
                 if ($this->games[$i]->isAwayWin($this->team_id)) { $record[0] += 1; }
                 else if ($this->games[$i]->isAwayLoss($this->team_id)) { $record[1] += 1; }
                 else { $record[2] += 1;}
              }
           }
           
           return $record;
        }
                
        function getHomeRecordAS() {
           $record[0] = 0;
           $record[1] = 0;
           $record[2] = 0;
           
           for ($i=0; $i < count($this->games); $i++) {
              if ($this->games[$i]->isHomeGame($this->team_id)) {
                 if ($this->games[$i]->isHomeWinAS($this->team_id)) { $record[0] += 1; }
                 else if ($this->games[$i]->isHomeLossAS($this->team_id)) { $record[1] += 1; }
                 else { $record[2] += 1;}
              }
           }
           
           return $record;
        }
        
        function getAwayRecordAS() {
           $record[0] = 0;
           $record[1] = 0;
           $record[2] = 0;
           
           for ($i=0; $i < count($this->games); $i++) {
              if ($this->games[$i]->isAwayGame($this->team_id)) {
